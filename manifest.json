{
    "manifest_version": 2,
    "name": "Wikipedia Kit",
    "description": "",
    "version": "0.0",
    "content_scripts": [
        {
            "matches": [
                "https://*.wikipedia.org/wiki/*"
            ],
            "css": [
                "wikipedia.css"
            ],
            "js": [
                "wikipedia.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "tabs",
        "activeTab"
    ],
    "web_accessible_resources": [
        "settings.html",
        "settings.js",
        "settings.css"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "Wikipedia Kit"
    }
}